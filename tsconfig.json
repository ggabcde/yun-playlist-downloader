{
  "include": ["@types/**/*.ts", "./src/**/*.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["./@types/*", "*"]
    },
    "typeRoots": ["./@types", "./node_modules/@types"],
    "allowJs": true,
    "module": "commonjs",
    "outDir": "js-lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2018",
    "resolveJsonModule": true,
    "noUnusedLocals": false
  }
}
