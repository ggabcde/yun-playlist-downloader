{
  "include": ["./ts-src/**/*.ts"],
  "exclude": ["ts-src/api/encrypt/nightmare.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["./ts-src/@types/*", "*"]
    },
    "typeRoots": ["./ts-src/@types", "./node_modules/@types"],
    "allowJs": true,
    "module": "commonjs",
    "outDir": "ts-build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2018",
    "resolveJsonModule": true,
    "noUnusedLocals": false
  }
}
